<div class="columns">
      <div class="container" style="margin-top: 125px;">
        <div class="column is-6 is-offset-3">
          <div class="box">
            <div class="card">
              <div class="card-content">
                <h3 class="title is-10 has-text-centered">Profile</h3>
                <div class="media">
                  <div class="media-left">
                    <div class="media-content">
                      <p class="title is-4">Username:</p>
                      <p class="title is-4">Email:</p>
                    </div>
                  </div>
                  <div class="column" style="margin-top:100px">
                    <div>
                      <div class="tile is-ancester is-vertical">
                        <div class="tile is-parent">
                          <div class="tile is-child is-warning">
                            Check out these recipes
                          </div>
                        </div>
                        {{! Refactor to grab recipes from selected user }}
                        <div class="tile">
                          {{#each users as |user|}}
                            <div class="tile is-parent is-3">
                              <a
                                href="/users/{{user.id}}"
                                class="tile is-child notification is-primary"
                              >{{user.user_name}}</a>
                            </div>
                          {{/each}}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>