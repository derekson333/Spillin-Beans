<div class="columns">
  <div class="container" style="margin-top: 125px;">
    <div class="column is-6 is-offset-3">
      <div class="box">
        <div class="card">
          <div class="card-content">
            <h3 class="title is-10 has-text-centered">Profile</h3>
            <div class="media">
              <div class="media-left">
                <div class="media-content">
                  <p class="title is-4">Username: {{user_name}}</p>
                  {{#if my_profile}}
                  <p class="title is-4">Email: {{email}}</p>
                  <div class="tile is-parent">
                    <a data-id={{id}} id ="delete-user"class="tile is-child notification is-danger" href="">
                      <strong>Delete Profile</strong>
                    </a>
                  </div>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="flex tile">
    {{#each recipes as |recipe|}}
    <div style='margin:20px;'class="tile is-parent is-3 notification is-primary">
        <a href="/recipes/{{recipe.id}}" class="tile is-child ">
        <strong>{{recipe.name}}</strong>
        
        <img src="{{recipe.img}}" alt="An image of {{recipe.name}}" class="tile is-child">
        
        </a>
         <a style='position: absolute;bottom: 0;left:0;'data-id={{recipe.id}} id ="delete-recipe"class="button is-child is-danger" href="">
                      <strong>Delete</strong>
                    </a>
    </div>
     
    
                  
                 
    {{/each}}
</div>

<script src="/js/profile.js"></script>