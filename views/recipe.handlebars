<div class="columns">
  <section class="column is-one-fifth">
    <div class="box">
      <div class="title">Trending Recipes</div>
      <div class="tile is-ancestor">
        <div class="tile is-vertical">
          <div class="tile">
            <div class="tile is-parent is-vertical">
              {{#each recipes as |recipe|}}
              <a href="/recipes/{{recipe.id}}">
                <article class="tile is-child box">
                  <article class="media">
                    <div class="media-left">
                      <figure class="image is-64x64">
                        <img src={{recipe.img}} alt="Image" />
                      </figure>
                    </div>
                    <div class="media-content">
                      <div class="content">
                        <p>
                          <strong>Title: {{recipe.name}}</strong>
                          <br />
                          <small>Creator: {{recipe.user.user_name}}</small>
                        </p>
                      </div>
                    </div>
                  </article>
                </article>
              </a>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="column is-four-fifths">
    <div id="mainColumn" class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-128x128">
            <img src={{img}} alt="Image" />
          </figure>
        </div>
        <div class="column column-is-four-fifths">
          <div class="media-content has-text-centered">
            <div class="content">
              <p>
              <h1>{{name}}</h1>
              <br />
              <small>Created by: {{user.user_name}},</small>
              <small>on {{format_date date_created}}</small>
              <br />
              <br />
              <br />
              <br />
              <h2>About this recipe:</h2>
              {{description}}
              </p>

            </div>
          </div>
        </div>
      </article>
      <table class="table table is-bordered is-striped is-narrow is-hoverable">
        <thead>
          <tr>
            <th>Ingredients:</th>
          </tr>
        </thead>
        <tbody>
          {{#each ingredients as |ingredient|}}
          <tr>
            <td>{{ingredient.name}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <table class="table table is-bordered is-striped is-narrow is-hoverable">
        <thead>
          <tr>
            <th>Instructions:</th>
          </tr>
        </thead>
        <tbody>
          {{#each instructions as |instruction|}}
          <tr>
            <td>{{instruction.name}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div>
        <h2 style="font-weight:bold">Total Prep Time: </h2>
        {{prep_time}} minutes
        <h2 style="font-weight:bold">Total Cook Time: </h2>
        {{cook_time}} minutes
      </div>
    </div>
  </div>
</div>