<div class="container Aligner-item" style="margin-top: 35px">
  <h3 class="title has-text-black has-text-centered">Spill Some Beans!</h3>
  <div class="box">
    <div class="field">
      <label class="label">Recipe Name</label>
      <div class="control has-icons-left has-icons-right">
        <input id="recipe-name" class="input" type="text" placeholder="What's it called?" />
        <span class="icon is-small is-left">
          <i class="mdi mdi-subtitles-outline"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <label class="label">Recipe Description</label>
      <div class="control has-icons-left has-icons-right">
        <input id="recipe-desc" class="input" type="text" placeholder="What is it?" />
        <span class="icon is-small is-left">
          <i class="mdi mdi-notebook-edit"></i>
        </span>
        <label class="label">Prep Time</label>
      <div class="control has-icons-left has-icons-right">
        <input id="prep-time" class="input" type="text" placeholder="How long to prep?" />
        <span class="icon is-small is-left">
          <i class="mdi mdi-notebook-edit"></i>
        </span>
        <label class="label">Cook Time</label>
      <div class="control has-icons-left has-icons-right">
        <input id="cook-time" class="input" type="text" placeholder="How long to cook?" />
        <span class="icon is-small is-left">
          <i class="mdi mdi-notebook-edit"></i>
        </span>
      <label class="label">Recipe Ingredients</label>
      <div class="control has-icons-left has-icons-right">
        <input id="ingredientInput" class="input" type="text" placeholder="What's in it?" />
        <span class="icon is-small is-left">
          <i class="mdi mdi-notebook-edit"></i>
        </span>

        <button id="createIngredient">Create ingredient</button>
        <input id="addIngredientButton" class="button is-small is-success is-pulled-right" type="submit" value="+" />
        <input id="removeIngredientButton" class="button is-small is-danger is-pulled-right" type="submit" value="-" />
        <label for="ingredientSearch">Choose an ingredient:</label>
        <select name="ingredientData" id="ingredientData">
          {{#each ingredients as |ingredient|}}
          <option value={{ingredient.id}}>{{ingredient.name}}</option>
          {{/each}}
        </select>




        <br />
        <br />
        <div class="container">
          <div>
            <div class="table-container">
              <table class="table table is-bordered is-striped is-narrow is-hoverable">
                <thead>
                  <tr>
                    {{!-- JS will add the th and td elements --}}
                    <th>Ingredients Added:</th>
                  </tr>
                </thead>
                <tbody id="currentIngredients">
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <br />
      <div class="field">
        <label class="label">Instructions</label>
        <div class="control has-icons-left">
          <textarea id="instructionInput" class="textarea" placeholder="How to make it!"></textarea>
          <span class="icon is-small is-left">
            <i class=""></i>
          </span>
        </div>
        <button id="createInstruction">Create instruction</button>
        <input id="addInstructionButton" class="button is-small is-success is-pulled-right" type="submit" value="+" />
        <input id="removeInstructionButton" class="button is-small is-danger is-pulled-right" type="submit" value="-" />
        <label for="instructionData">Choose an instruction:</label>
        <select name="instructionData" id="instructionData">
          {{#each instructions as |instruction|}}
          <option value={{instruction.id}}>{{instruction.name}}</option>
          {{/each}}
        </select>
        <div class="container">
          <div>
            <div class="table-container">
              <table class="table table is-bordered is-striped is-narrow is-hoverable">
                <thead>
                  <tr>
                    {{!-- JS will add the th and td elements --}}
                    <th>Instructions Added:</th>
                  </tr>
                </thead>
                <tbody id="currentInstructions">
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <label class="label">Upload a picture!</label>
      <div class="file">
        <label class="file-label">
          <button class="file-input" type="file"id="upload"></button>
          <span class="file-cta">
            <span class="file-icon">
              <i class="mdi mdi-upload"></i>
            </span>
            <span class="file-label"> Choose a fileâ€¦ </span>
          </span>
        </label>
      </div>
      <br />
      <div class="field is-grouped">
        <div class="control">
          <button id='create-recipe' class="button is-link">Submit</button>
        </div>
        <div class="control">
          <button class="button is-link is-light">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="//static.filestackapi.com/filestack-js/3.x.x/filestack.min.js"></script>
<script src="/js/recipeForm.js"></script>
<script src="/js/image.js"></script>
<script src="/js/dropdown.js"></script>